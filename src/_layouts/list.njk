---
layout: "base.njk"
---

<main id="main" class="flow">
  <article class="wrapper region">
    <h1 class="category-title">{{ title }}</h1>
    <ul class="grid" role="list" data-rows="masonry" data-layout="50-50">
      {% for item in collections[collectionName] %} {% if item.data.lang ==
      page.lang %}
      <li class="card flow flow-exception overflow-hidden">
        {% imageShortcode item.data.teaser, item.data.teaserAlt, "high" %}
        <h2>
          <a href="{{ item.url }}">{{ item.data.title | lower }}</a>
        </h2>
      </li>
      {% endif %} {% endfor %}
    </ul>
  </article>
</main>
